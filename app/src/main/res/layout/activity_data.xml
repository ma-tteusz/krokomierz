<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c6fdbb"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.edu.wat.wel.krokomierz.DataActivity">


    <SeekBar
        android:id="@+id/seekbarwaga"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:indeterminate="false"
        android:max="150"
        android:progress="1" />

    <TextView
        android:id="@+id/textWaga1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waga"
        android:textSize="20sp"
        android:textStyle="italic|bold"
        android:layout_below="@+id/seekbarwaga"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/textWzrost1"
        android:layout_alignStart="@+id/textWzrost1" />

    <TextView
        android:id="@+id/textWaga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textWaga1"
        android:layout_toEndOf="@+id/textWaga1"
        android:layout_toRightOf="@+id/textWaga1"
        android:layout_marginLeft="50dp"
        android:text="0"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kg"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_alignTop="@+id/textWaga"
        android:layout_toEndOf="@+id/textWaga"
        android:layout_toRightOf="@+id/textWaga"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp" />

    <SeekBar
        android:id="@+id/seekbarwzrost"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/seekbarwaga"
        android:layout_alignStart="@+id/seekbarwaga"
        android:layout_centerVertical="true"
        android:indeterminate="false"
        android:max="210"
        android:progress="1" />


    <TextView
        android:id="@+id/textWzrost1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wzrost"
        android:textSize="20sp"
        android:textStyle="italic|bold"
        android:layout_below="@+id/seekbarwzrost"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/dalejbutton"
        android:layout_toStartOf="@+id/dalejbutton" />

    <TextView
        android:id="@+id/textWzrost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_alignTop="@+id/textWzrost1"
        android:layout_alignLeft="@+id/textWaga"
        android:layout_alignStart="@+id/textWaga" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cm"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_alignTop="@+id/textWzrost"
        android:layout_toEndOf="@+id/textWzrost"
        android:layout_toRightOf="@+id/textWzrost"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp" />


    <Button
        android:id="@+id/dalejbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp"
        android:background="#7d003ef7"
        android:onClick="mainactivity"
        android:text="Dalej"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>
